
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  chats     Chat[]
}

model Chat {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  response  String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
