{
  "compilerOptions": {
    /* === Core Settings === */
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node", // Resolve modules like Node.js
    "esModuleInterop": true, // Allow default imports for CommonJS modules
    "resolveJsonModule": true, // Import .json files
    "forceConsistentCasingInFileNames": true, // Avoid case issues
    /* === Type Checking === */
    "strict": true, // Enable all strict type checking
    "skipLibCheck": true, // Speeds up build, safe for most projects
    "noImplicitAny": true, // Avoid using 'any' accidentally
    "strictNullChecks": true, // Null safety
    "noUnusedLocals": true, // Warn on unused variables
    "noUnusedParameters": true // Warn on unused function params
  }
}
